.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.container .house-list {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  background-color: #fff;
}

.container .house-list .house-item {
  width: 98%;
  border-bottom: 1px solid #eee;
  margin-top: 10rpx;
  display: flex;
}

.container .house-list .house-item .house-image {
  width: 40%;
  margin-left: 10rpx;
}

.container .house-list .house-item .house-image image {
  width: 100%;
  height: 192rpx;
  margin: 10rpx 0;
}

.container .house-list .house-item .house-title {
  width: 60%;
  padding-left: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.container .house-list .house-item .house-title .title {
  color: #000;
  font-size: 33rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.container .house-list .house-item .house-title .price {
  color: #f00;
  font-weight: 600;
  font-size: 30rpx;
}

.container .house-list .house-item .house-title .space {
  width: 100%;
  color: #999;
  font-size: 28rpx;
}

.container .house-list .house-item .house-title view {
  margin: 7rpx 0;
}

.nohouse {
  width: 100%;
  text-align: center;
  color: #999;
  padding-top: 100rpx;
  z-index: 9;
}
