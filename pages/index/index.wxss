
.container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

/* header */
.container .header {
    width: 100%;
    height: 140rpx;
}
.container .header .sort {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 20rpx 0;
}
.container .header .sort .sort-item {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50rpx;
    margin: 0 50rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.container .header .sort .sort-item:nth-child(1) {
    background: linear-gradient(to right bottom,rgb(246, 121, 90) 30%, red 100%);
}
.container .header .sort .sort-item:nth-child(2) {
    background: linear-gradient(to right bottom,rgb(139, 246, 90) 30%, #42cf48 100%);
}
.container .header .sort .sort-item image {
    width: 100rpx;
    height: 100rpx;
}
.container .header .sort .sort-item .sort-text {
    font-size: 28rpx;
    color: #fff;
}


/* content */
.container .content {
    position: absolute;
    width: 100%;
    top: 180rpx;
    bottom: 0;
}
.container .content .house-list {
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    background-color: #fff;
}
.container .content .house-list .house-item {
    width: 98%;
    border-bottom: 1px solid #eee;
    margin-top: 10rpx;
    display: flex;
}
.container .content .house-list .house-item .house-image {
    width: 40%;
    margin-left: 10rpx;
}
.container .content .house-list .house-item .house-image image{
    width: 100%;
    height: 192rpx;
    margin: 10rpx 0;
}
.container .content .house-list .house-item .house-title {
    width: 60%;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.container .content .house-list .house-item .house-title .title {
    color: #000;
    font-size: 33rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.container .content .house-list .house-item .house-title .price {
    color: #f00;
    font-weight: 600;
    font-size: 30rpx;
}
.container .content .house-list .house-item .house-title .space {
    width: 100%;
    color: #999;
    font-size: 28rpx;
}
.container .content .house-list .house-item .house-title .info .info-item {
    display: inline-block;
    height: 50rpx;
    background-color: rgb(206, 231, 255);
    color: #409EFF;
    font-size: 22rpx;
    text-align: center;
    line-height: 50rpx;
    margin: 0 5rpx;
    padding: 0rpx 10px;
    box-sizing: border-box;
}
.container .content .house-list .house-item .house-title view {
    margin: 7rpx 0;
}
.nohouse {
    width: 100%;
    text-align: center;
    color: #999;
    padding-top: 100rpx;
    z-index: 9;
}