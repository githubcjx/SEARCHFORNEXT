
.container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
}

/* content */
.container .content {
    width: 100%;
    height: 100%;
}
.container .content .house-list {
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    background-color: #fff;
}
.container .content .house-list .house-item {
    width: 98%;
    border-bottom: 1px solid #eee;
    margin-top: 10rpx;
    display: flex;
}
.container .content .house-list .house-item .house-image {
    width: 40%;
    margin-left: 10rpx;
}
.container .content .house-list .house-item .house-image image{
    width: 100%;
    height: 192rpx;
    margin: 10rpx 0;
}
.container .content .house-list .house-item .house-title {
    width: 60%;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.container .content .house-list .house-item .house-title .title {
    color: #000;
    font-size: 33rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.container .content .house-list .house-item .house-title .price {
    color: #f00;
    font-weight: 600;
    font-size: 30rpx;
}
.container .content .house-list .house-item .house-title .space {
    width: 100%;
    color: #999;
    font-size: 28rpx;
}
.container .content .house-list .house-item .house-title .info .info-item {
    display: inline-block;
    height: 40rpx;
    background-color: rgb(206, 231, 255);
    color: #409EFF;
    font-size: 22rpx;
    text-align: center;
    line-height: 40rpx;
    margin-right: 14rpx;
    padding: 0rpx 8px;
    box-sizing: border-box;
}
.container .content .house-list .house-item .house-title view {
    margin: 7rpx 0;
}
.nohouse {
    width: 100%;
    text-align: center;
    color: #999;
    padding-top: 100rpx;
    z-index: 9;
}